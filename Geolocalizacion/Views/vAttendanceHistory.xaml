<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Geolocalizacion.Models"
             x:Class="Geolocalizacion.Views.vAttendanceHistory">
    <ScrollView>
        <VerticalStackLayout Padding="10">
            
            <Label Text="Registro de Asistencia"
               FontSize="20"
               HorizontalTextAlignment="Center"
               HorizontalOptions="Center"
               TextColor="Black"
               FontAttributes="Bold"
               Margin="10, 0, 0, 10"
               />

            <Label Text="Rango de Fecha"
                 FontSize="15"
                 HorizontalTextAlignment="Start"
                 HorizontalOptions="Start"
                 TextColor="Gray"
                 FontAttributes="Bold"
                 Margin="0,0,0,2.5"
             />

            <Label x:Name="alertLR"
                    Text="**La Ficha Final no puedes ser menor a la inicial**" 
                    TextColor="Red" 
                    Margin="0,0,0,5"
                    IsVisible="False"
                    />

            <Grid>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout BackgroundColor="Gray"
                                     Grid.Row="0" Grid.Column="0"
                                     HorizontalOptions="Center"
                                     Padding="8">

                    <Label
                        Text="Desde"
                        FontAttributes="Bold"
                    />

                    <DatePicker
                    x:Name="dateInitPicker"
                    Format="yyyy-MM-dd" 
                                    />

                </VerticalStackLayout>

                <VerticalStackLayout
                      Grid.Row="0" Grid.Column="1"
                    Background="Gray" HorizontalOptions="Center"
                    Padding="8">
                    <Label
                        Text="Hasta"
                        FontAttributes="Bold"
                     />

                    <DatePicker
                    x:Name="dateEndPicker"
                    Format="yyyy-MM-dd" 
                                    />
                </VerticalStackLayout>

                <Button BackgroundColor="Green" 
                        HeightRequest="20"
                          Grid.Row="0" Grid.Column="3"
                        HorizontalOptions="Center"
                        Clicked="Button_Clicked">

                    <Button.ImageSource>
                        <FontImageSource
                            FontFamily="FontAwesome"
                            Glyph="{x:Static models:IconFont.MagnifyingGlass}"
                            Size="15"
                            Color="White"
                            />
                    </Button.ImageSource>
                </Button>

            </Grid>

            <CollectionView x:Name="recordsView"
                            Margin="0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray"
                               BackgroundColor="White"
                               Padding="5" Margin="5">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/> 
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" /> 
                                    <ColumnDefinition Width="2*" /> 
                                </Grid.ColumnDefinitions>

                                <VerticalStackLayout
                                    Grid.Row="0" Grid.Column="0"
                                    HorizontalOptions="End">
                                    <Label Text="{Binding Tipo}" TextColor="{Binding TipoColor}" FontAttributes="Bold"/>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Fecha: " FontAttributes="Bold" TextColor="Black"/>
                                                <Span Text="{Binding Fecha}"  TextColor="Gray"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Hora: " FontAttributes="Bold" TextColor="Black"/>
                                                <Span Text="{Binding Hora}" TextColor="Gray"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Latitud: " FontAttributes="Bold" TextColor="Black"/>
                                                <Span Text="{Binding Latitud}" TextColor="Gray"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Longitud: " FontAttributes="Bold" TextColor="Black"/>
                                                <Span Text="{Binding Longitud}" TextColor="Gray"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>

                                <VerticalStackLayout
                                    Grid.Row="0" Grid.Column="1"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    Margin="20,0">
                                    <Button BackgroundColor="Green" 
                                        HeightRequest="15"
                                        Clicked="Button_Clicked_1"
                                        CommandParameter="{Binding .}">

                                        <Button.ImageSource>
                                          <FontImageSource
                                            FontFamily="FontAwesome"
                                            Glyph="{x:Static models:IconFont.Eye}"
                                            Size="15"
                                            Color="White"
                                            />
                                        </Button.ImageSource>
                                    </Button>
                                </VerticalStackLayout>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>