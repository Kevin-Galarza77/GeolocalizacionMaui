<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Geolocalizacion.Models"
             x:Class="Geolocalizacion.Views.vAttendance">

    <VerticalStackLayout>

        <Label FontFamily="FontAwesome"
               Text="{x:Static models:IconFont.User}"
               FontSize="100"
               HorizontalOptions="Center"
               TextColor="Black"
               Margin="25"
               />

        <Grid ColumnDefinitions="*,*">

            <Button Text="Ingresar"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Background="Green"
                    TextColor="White"
                    Padding="30,0"
                    >

                <Button.ImageSource>
                    <FontImageSource
                            FontFamily="FontAwesome"
                            Glyph="{x:Static models:IconFont.PersonArrowDownToLine}"
                            Size="15"
                            Color="White"
                            />
                </Button.ImageSource>
            </Button>

            <Button Text="Salir"
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    Background="Red"
                    TextColor="White"
                    Padding="50,0"
                    >

                <Button.ImageSource>
                    <FontImageSource
                            FontFamily="FontAwesome"
                            Glyph="{x:Static models:IconFont.PersonArrowUpFromLine}"
                            Size="15"
                            Color="White"
                            />
                </Button.ImageSource>
            </Button>
        </Grid>


    </VerticalStackLayout>
    
</ContentView>
