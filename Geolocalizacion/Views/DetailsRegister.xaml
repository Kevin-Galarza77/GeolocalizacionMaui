<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Geolocalizacion.Models"
             x:Class="Geolocalizacion.Views.DetailsRegister"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             Title="Detalles del Registro"
             Shell.BackgroundColor="Blue"
             Shell.TitleColor="White">

    <ScrollView
        BackgroundColor="White">
        
        <VerticalStackLayout Padding="10">


            <Label  
               Text="{Binding Tipo}"
               FontSize="40"
               HorizontalOptions="Center"
               TextColor="{Binding TipoColor}"
               Margin="0,0,0,10"
               FontAttributes="Bold"
               />

            <Label FontFamily="FontAwesome"
               Text="{x:Static models:IconFont.User}"
               FontSize="100"
               HorizontalOptions="Center"
               TextColor="Black"
               Margin="0"
               />

            <Grid
                Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label  
                   Grid.Row="0" Grid.Column="0"
                   Text="{Binding Fecha}"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="Grey"
                   Margin="0,0,0,10"
                   FontAttributes="Bold"
                   />

                <Label  
                   Grid.Row="0" Grid.Column="1"
                   Text="{Binding Hora}"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="Grey"
                   Margin="0,0,0,10"
                   FontAttributes="Bold"
                   />

            </Grid>

            <maps:Map x:Name="map"
                  IsTrafficEnabled="True"
                  MapType="Street"
                  IsShowingUser="True"
                  IsZoomEnabled="False"
                  IsScrollEnabled="False"
                  Margin="0, 10"
                  HeightRequest="500"
                  >
            </maps:Map>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>