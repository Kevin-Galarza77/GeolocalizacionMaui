<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="Geolocalizacion.Views.vHistoryRegisters"
             Loaded="LoadRangeDataAsync">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Selección de fechas -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center"
            VerticalOptions="Center">
            <VerticalStackLayout>
                <Label Text="Fecha inicio" FontAttributes="Bold"/>
                <DatePicker x:Name="dpStartDate" Date="{x:Static sys:DateTime.Today}" />
            </VerticalStackLayout>
            <VerticalStackLayout>
                <Label Text="Fecha fin" FontAttributes="Bold"/>
                <DatePicker x:Name="dpEndDate" Date="{x:Static sys:DateTime.Today}" />
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <!-- Botón para buscar -->
        <Button Text="Buscar ingresos" Clicked="OnSearchClicked" />

        <!-- Buscador por nombre o cédula -->
        <SearchBar Placeholder="Buscar por nombre o cédula" TextChanged="OnSearchChanged" />

        <!-- Lista de resultados -->
        <CollectionView ItemsSource="{Binding PagedData}">
            <CollectionView.Header>
                <Grid ColumnDefinitions="*,*,*,*,*" Padding="5" BackgroundColor="#DDD" ColumnSpacing="15">
                    <Label Text="Apellido" FontAttributes="Bold" Grid.Column="0" HorizontalTextAlignment="Center" />
                    <Label Text="Cédula" FontAttributes="Bold" Grid.Column="1" HorizontalTextAlignment="Center" />
                    <Label Text="Longitud" FontAttributes="Bold" Grid.Column="2" HorizontalTextAlignment="Center" />
                    <Label Text="Latitud" FontAttributes="Bold" Grid.Column="3" HorizontalTextAlignment="Center" />
                    <Label Text="Tipo" FontAttributes="Bold" Grid.Column="4" HorizontalTextAlignment="Center" />
                </Grid>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*,*,*,*" Padding="5" ColumnSpacing="4">
                        <Label Text="{Binding lastName}" Grid.Column="0" HorizontalTextAlignment="Center" />
                        <Label Text="{Binding cardId}" Grid.Column="1" HorizontalTextAlignment="Center" />
                        <Label Text="{Binding longitude}" Grid.Column="2" HorizontalTextAlignment="Center" />
                        <Label Text="{Binding latitude}" Grid.Column="3" HorizontalTextAlignment="Center" />

                        <!-- Tipo con color según ingreso/salida -->
                        <Frame Grid.Column="4" Padding="2" CornerRadius="2"
                       BackgroundColor="{Binding TipoColor}" HorizontalOptions="Center">
                            <Label Text="{Binding Tipo}" TextColor="White" HorizontalTextAlignment="Center" />
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <!-- Paginado -->
        <HorizontalStackLayout Spacing="10" Margin="0,10,0,0" HorizontalOptions="Center">
            <Button Text="⏪" Clicked="OnPrevPageClicked"/>
            <Label Text="{Binding PageInfo}" HorizontalTextAlignment="Center"/>
            <Button Text="⏩" Clicked="OnNextPageClicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentView>
